{
    "name": "ivan/php-unit",
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        }
    },
    "authors": [
        {
            "name": "Ivan Pavlovski",
            "email": "ivan.pavlovski@peopleweek.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.0"
    },
    "scripts": {
        "analyze": "clear && vendor/bin/phpstan",
        "test": "clear && vendor/bin/phpunit ./src/tests/* --color --display-warning"
    }
}
